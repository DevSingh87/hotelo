<h1>Listing hotels</h1>

<table>
  <thead>
    <tr>
      <th>Hotel name</th>
      <th>About hotel</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.hotel_name %></td>
        <td><%= hotel.about_hotel %></td>
        <td><%= hotel.address %></td>
        <td><%= hotel.latitude %></td>
        <td><%= hotel.longitude %></td>
        <td><%= link_to 'Show', [:admin, hotel] %></td>
        <td><%= link_to 'Edit', edit_admin_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', [:admin, hotel], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

